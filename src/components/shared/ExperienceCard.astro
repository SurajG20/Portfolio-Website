---
interface Props {
  title: string;
  description: string;
  url: string;
  logo?: string;
  startDate: Date;
  endDate?: Date;
  current?: boolean;
  isExternal?: boolean;
}

const { title, description, url, logo, startDate, endDate, current = false, isExternal = false } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short"
  });
};

const dateRange = current 
  ? `${formatDate(startDate)} - Present`
  : `${formatDate(startDate)} - ${endDate ? formatDate(endDate) : ''}`;
---

<article class="content-card">
  <div class="card-content">
    {logo && (
      <div class="card-logo">
        <img src={logo} alt={`${title} logo`} width="48" height="48" />
      </div>
    )}
    <div class="card-header">
      <h3 class="card-title">
        <a
          href={url}
          target={isExternal ? "_blank" : "_self"}
          rel={isExternal ? "noopener noreferrer" : ""}
        >
          {title}
        </a>
      </h3>
      <time class="date">{dateRange}</time>
    </div>
    <p class="card-description">{description}</p>
  </div>
</article>

<style>
  .content-card {
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1.5rem;
    transition:
      transform 0.2s ease,
      border-color 0.2s ease;
  }

  .content-card:hover {
    transform: translateY(-2px);
    border-color: var(--text-muted);
  }

  .card-logo {
    margin-bottom: 1rem;
  }

  .card-logo img {
    border-radius: 8px;
    object-fit: cover;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .card-title {
    font-size: var(--text-xl);
    margin: 0;
  }

  .card-title a {
    color: var(--text-color);
    text-decoration: none;
  }

  .card-title a:hover {
    color: var(--primary-color);
  }

  .card-description {
    color: var(--text-muted);
    font-size: var(--text-sm);
    line-height: 1.6;
    margin: 0;
  }

  .date {
    font-size: var(--text-xs);
    color: var(--text-muted);
    white-space: nowrap;
  }
</style>
